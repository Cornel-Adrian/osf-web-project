<%- include('./partials/header')-%>
<%- include('./partials/navbar')-%>

<h1>Checkout</h1>
<form action="/orders" method="POST"></form>
<label>Adress:</label>
<input type="text" name="address"></input>
<br>
<label>Payment Id:</label>
<input type="text" name="paymentId"></input>
<br>
<div name="items">
    <% var PriceSum = 0;  %>
    <% if (typeof cart == 'undefined') { %>
    <h2>Cart is empty</h2>
    <% } else { %>

    <% cart.forEach(product => { %>
    <% PriceSum =+ product.variant.price %>
    <div class="container">
        <p>Product ID: <%- product.productId%> </p>
        <p>Product Quantity: <%- product.quantity %> </p>
        <p>Product Price: <%- product.variant.price %> </p>
    </div>
    <br>
    <h1>Total Price: <%- PriceSum %> USD </h1>
    <% })} %>
</div>

<button type="submit" id="checkout-button">Place Order</button>
</form>


<%- include('./partials/footer')-%>